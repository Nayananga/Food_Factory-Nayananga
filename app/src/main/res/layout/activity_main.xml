<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonRegisterProduct"
            android:layout_width="120dp"
            android:layout_height="96dp"
            android:text="Register Product"
            android:onClick="registerProduct"/>

        <Button
            android:id="@+id/buttonDisplayProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Product"
            android:onClick="displayProduct"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:onClick="availability"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonEditProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Product"
            android:onClick="editProduct"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:onClick="search"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipes"
            android:onClick="recipes"
            app:layout_column="2"
            app:layout_row="1" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>