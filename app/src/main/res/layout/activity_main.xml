<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hello"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <Button
            android:id="@+id/buttonRegisterProduct"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape6"
            android:onClick="registerProduct"
            android:text="Register Product"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonDisplayProduct"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape2"
            android:onClick="displayProduct"
            android:text="Display Product"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonAvailability"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape3"
            android:onClick="availability"
            android:text="Availability"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonEditProduct"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape1"
            android:onClick="editProduct"
            android:text="Edit Product"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape5"
            android:onClick="search"
            android:text="Search"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonRecipes"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape4"
            android:onClick="recipes"
            android:text="Recipes"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>