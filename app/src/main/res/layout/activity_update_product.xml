<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hello"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner"
        android:text="Update the Product"
        android:textColor="#ce3232"
        android:textSize="40sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/spinner"
        android:hint="Product Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/spinner"
        android:hint="Weight in grams"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Price in Pounds"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/spinner"
        android:breakStrategy="balanced"
        android:fitsSystemWindows="true"
        android:gravity="top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:singleLine="false" />

    <CheckBox
        android:id="@+id/checkBoxUpdateAvailability"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner"
        android:breakStrategy="balanced"
        android:hint="Availability" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape1"
        android:elevation="4dp"
        android:onClick="saveUpdateProduct"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Save"
        android:textColor="#fff" />
</LinearLayout>